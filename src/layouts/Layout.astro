---
interface Props {
  title: string;
}

const { title } = Astro.props;
import Header from "../components/header/Header.astro";
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Astro description" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body>
    <Header />
    <slot />
  </body>
</html>
<style is:global>
  @import url("https://fonts.googleapis.com/css2?family=Onest:wght@300;400;500;600;700&display=swap");

  :root {
    --primary-color: #7b65e4;
    --secondary-color: #ffff;
    --background-color: #7b65e40f;
    --background-seconday-color: #080808;
    --accent-color: #90acf5;
    --accent-secondary-color: #8074cc;
    --border-color: rgba(255, 255, 255, 0.125);
    --social-background: #7a65e42a;
  }

  ::-webkit-scrollbar {
    width: 8px;
  }

  ::-webkit-scrollbar-thumb {
    background-color: #7b65e4;
    border-radius: 4px;
  }

  ::-webkit-scrollbar-track {
    background-color: transparent;
  }

  /* Barras de desplazamiento para navegadores generales (Firefox, Edge, etc.) */

  * {
    padding: 0;
    margin: 0;
    box-sizing: border-box;
  }

  body {
    font-family: "Onest", sans-serif;
    background-color: #080808;
    background-image: radial-gradient(
      ellipse 100% 100% at 50% 0%,
      #7877c64d,
      #fff0
    );
    min-height: 100vh;
    color: #fff;
  }

  main {
    padding-top: 4rem;
    display: flex;
    flex-direction: column;
    gap: 5rem;
  }

  strong {
    color: #90acf5;
    font-weight: bold;
  }

  .alternative-strong {
    color: var(--primary-color);
  }
</style>
